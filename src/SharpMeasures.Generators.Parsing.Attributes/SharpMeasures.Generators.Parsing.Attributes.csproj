<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>SharpMeasures.Generators.Parsing.Attributes</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <Title>SharpMeasures.Generators.Parsing.Attributes</Title>
        <Description>
            Allows the attributes provided by SharpMeasures.Generators to be parsed.
        </Description>
        <PackageReadmeFile>README.nupkg.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.nupkg.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="SharpAttributeParser" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SharpMeasures.Generators.Parsing.Attributes.Abstractions\SharpMeasures.Generators.Parsing.Attributes.Abstractions.csproj" />
    </ItemGroup>

</Project>
